{% extends "@FOSUser/layout.html.twig" %}

{% block title %}AppBundle:Item:all{% endblock %}

{% block content %}

    <div class="container">
        <div class="products-page">
            <div class="products">
                <div class="tags">

                    <h4 class="tag_head">Categories</h4>
                    <ul class="tags_links">
                        {% for cat in categories %}
                        <li><a href="#">{{ cat.name }}</a></li>
                        {% endfor %}
                    </ul>

                </div>

            </div>
            <div class="new-product">
                <div class="new-product-top">
                    <ul class="product-top-list">
                        <li><a href="/">Home</a>&nbsp;<span>&gt;</span></li>
                        <li><span class="act">Best Sales</span>&nbsp;</li>
                    </ul>
                    <p class="back"><a href="/">Back to Previous</a></p>
                    <div class="clearfix"></div>
                </div>
                <div class="mens-toolbar">
                    <div class="sort">
                        <div class="sort-by">
                            <label>Sort By</label>
                            <select>
                                <option value="">
                                    Position                </option>
                                <option value="">
                                    Name                </option>
                                <option value="">
                                    Price                </option>
                            </select>
                            <a href=""><img src="images/arrow2.gif" alt="" class="v-middle"></a>
                        </div>
                    </div>
                    <ul class="women_pagenation">
                        <li>Page:</li>
                        <li class="active"><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div id="cbp-vm" class="cbp-vm-switcher cbp-vm-view-grid">
                    <div class="cbp-vm-options">
                        <a href="#" class="cbp-vm-icon cbp-vm-grid cbp-vm-selected" data-view="cbp-vm-view-grid" title="grid">Grid View</a>
                        <a href="#" class="cbp-vm-icon cbp-vm-list" data-view="cbp-vm-view-list" title="list">List View</a>
                    </div>
                    <div class="pages">
                        <div class="limiter visible-desktop">
                            <label>Show</label>
                            <select>
                                <option value="" selected="selected">
                                    9                </option>
                                <option value="">
                                    15                </option>
                                <option value="">
                                    30                </option>
                            </select> per page
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="row">
                        {% for item in items %}
                        <div class="col-sm-6 col-md-4">
                            <div class="thumbnail">
                                <img src="{{ item.image }}" alt="..." class="img-responsive" style="height: 242px; width: 200px">
                                <div class="caption">
                                    <h3>{{ item.name }}</h3>
                                    <h2>${{ item.price }}</h2>
                                    <p>{{ item.details }}</p>

                                    <p><a href="{{ path("detailItem", {"id": item.id}) }}" class="btn btn-primary" role="button">View</a> <a href="{{ path('addToBag', {'id' : item.id}) }}" class="btn btn-default" role="button">Add to cart</a></p>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>

        </div>
            <script src="{{ asset('js/cbpViewModeSwitch.js') }}"></script>
            <script src="{{ asset('js/classie.js') }}"></script>

        </div>
    </div>
</div>
{% endblock %}

